package simu.model;

import java.util.ArrayList;

public class Suureet {
	public ArrayList<Double> palveluaika;
	//private double keskiPalveluaika;
	
	public Suureet() {
		palveluaika = new ArrayList<Double>();
	}
	
	public  void setpalveluaika(double palvelunKesto) {
	    palveluaika.add(palvelunKesto);
	}
	
	//public ArrayList<Double> getPalveluaika() {
	  //  return palveluaika;
	//}
	
	public double palveluAjat() {
    int size = palveluaika.size();
    double sum = 0;
    //double average;
    for (int i = 0; i < size; i++) {
        sum += palveluaika.get(i);
    }
    return sum / size;
    //System.out.println("Palvelupisteen 2 keskimääräinen palveluaika: " + average);
	//return average;
}


	
