package simu.model;

import java.util.ArrayList;

public class Suureet {
	private static ArrayList<Double> palveluaika;
	
	public Suureet() {
		palveluaika = new ArrayList<Double>();
	}
	
	public static void setpalveluaika(double palvelunKesto) {
	    palveluaika.add(palvelunKesto);
	}
	
	public double keskimPalveluaika() {
        double total = 0;
        for (double time : palveluaika) {
            total += time;
        }
        return total / palveluaika.size();
    }

}
